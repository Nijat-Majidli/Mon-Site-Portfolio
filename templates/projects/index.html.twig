{% extends 'base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
    <div class="pageProjects">
        <div class="typewriter"> 
            <h4> My projects : </h4> 
        </div>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                {% for project in allProjects %}
                    {% if project.id == 0 %}
                        <li data-target="#carouselExampleIndicators" data-slide-to="{{project.id}}" class="active"></li>
                    {% else %}
                        <li data-target="#carouselExampleIndicators" data-slide-to="{{project.id}}"></li>
                    {% endif %}
                {% endfor %}
            </ol>

            <!-- The slideshow -->
            <div class="carousel-inner projects">
                {% for project in allProjects %}
                    {% if project.id == 0 %}
                        <div class="carousel-item active project">
                    {% else %}
                        <div class="carousel-item project">
                    {% endif %}
                            <h5 class="projectName"> 
                                <span>{{ project.name }}</span> 
                            </h5>
                            <div class="projectPhoto"> 
                                <img src="/images/{{project.photo}}" alt="photoProjet"> 
                            </div>
                            <p class="projectDescription"> 
                                <b>Description:</b> 
                                <span class="proDesc" id="proDesc{{project.id}}"> {{ project.description }} </span> 

                                <span class="suite"> 
                                    <a href='#' class='{{project.id}}' id='readNext{{project.id}}'> Suite... </a>
                                </span>

                                <span class="reduire">
                                    <a href='#' class='{{project.id}}' id='reduceText{{project.id}}'> RÃ©duire </a>
                                </span>
                            </p>
                            <p>
                                <b>Web technologies:</b> {{ project.technologies }} 
                            </p>
                            <p> 
                                <b>Link:</b> <a href="{{ project.link }}" class="projectLink"> <span>{{ project.link }}</span> </a>
                            </p>
                        </div>
                {% endfor %}
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>    

        <div class="icons">
            <div>
                <a href="https://www.linkedin.com/in/nijat-majidli-03889627/" target="_blank">
                    <img src="{{ asset('images/linkedin.png') }}" class='fab fa-linkedin' alt="linkedin">
                </a>
            </div>
            <div>
                <a href="https://github.com/Nijat-Majidli?tab=repositories" target="_blank">
                    <img src="{{ asset('images/github.png') }}" class='fab fa-github' alt="github">
                </a>
            </div>
        </div>
    </div>    
{% endblock %}
